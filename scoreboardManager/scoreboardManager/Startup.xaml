        <Canvas Name="Login_Screen" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="512.789" Margin="-0.17,0,0,0" VerticalAlignment="Top" Width="665.34" Visibility="Hidden" KeyDown="OnPressEnter">
